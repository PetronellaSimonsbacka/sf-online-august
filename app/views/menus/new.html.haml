.row
  .column-md-12
    %h1 Add menu

    = form_for @menu, class: 'form-group' do |f|
      = f.label :title do
        = f.text_field :title, id: 'title', class: 'form-control'
      %p#dishes
        - unless @dishes.nil?
          %h3 Add Dishes
          = f.collection_check_boxes :dish_ids, @dishes, :id, :dish_name do |b|
            .checkbox
              = b.check_box + b.label
      = f.submit 'Create', id: 'create', class: 'btn btn-warning'
